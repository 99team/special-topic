.sidebar-box .affix
  top: 20px

.sidebar ol > li > a
  padding: 4px 20px
  display: block
  color: #666
  font-weight: 500
  &:hover,
  &:focus
    padding-left: 19px
    background-color: transparent
    border-left: 1px solid #563d7c
    color: #563d7c

.sidebar ol > .active
  a,
  &:hover a,
  &:focus a
    padding-left: 18px
    border-left: 2px solid #563d7c
    background-color: transparent
    color: #563d7c
    font-weight: 700

.sidebar ol ol > li > a
  padding: 1px 0 1px 30px
  font-size: 12px
  font-weight: 400
  &:hover,
  &:focus
    padding-left: 29px

.sidebar ol ol > .active
  a, 
  &:hover a, 
  &:focus a
    padding-left: 28px
    font-weight: 500

.back-to-top
  display: block
  padding: 20px 0 0 20px
  color: #666
  &:hover
    color: #563d7c
    text-decoration: none